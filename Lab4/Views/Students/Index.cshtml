@model Lab4.Models.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Enrollment Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            string selectedRow = "";
            string something = "";
            int studentNumber = 0;

            if (ViewData["sId"]!=null)
            {
                something= ViewData["sId"].ToString();
                studentNumber = Int32.Parse(something);
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.CommunityMemberships != null)
{

    <h3>
        Member of the following communities
    </h3>
    <table class="table">
        <tr>
            @if (Model.Communities.Count() > 0)
            {
                <th> Name </th>
            }
            else
            {
                <th> No community record exist </th>
            }
        </tr>


        @foreach (var c in Model.Communities)
        {
            @foreach (var item in Model.CommunityMemberships)
            {

                if (item.CommunityId == c.Id)
                {
                    <tr>
                        <td>
                            @c.Title
                        </td>
                    </tr>
                }
            }

        }



    </table>
}
